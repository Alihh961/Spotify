{% extends 'base.html.twig' %}

{% block title %}Artist index
{% endblock %}

{% block body %}
	<h1 class="text-center my-5">Artist index</h1>
	<div class="row">
		<div class="col-8 m-auto">
			<table class="table m-auto full-width">
				<thead class="">
					<tr class="text-center">
						<th>Id</th>
						<th>FirstName</th>
						<th>LastName</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for artist in artists %}
						<tr class="text-center">
							<td>{{ artist.id }}</td>
							<td>{{ artist.firstName }}</td>
							<td>{{ artist.lastName }}</td>
							<td class="d-flex justify-content-evenly">
								<a href="{{ path('app_artist_show', {'id': artist.id}) }}" class="btn btn-success">show</a>
								<a href="{{ path('app_artist_edit', {'id': artist.id}) }}" class="btn btn-info">edit</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

	<a href="{{ path('app_artist_new') }}" class="m-auto d-block my-3 btn btn-success" style="width:fit-content">Create new</a>
{% endblock %}
